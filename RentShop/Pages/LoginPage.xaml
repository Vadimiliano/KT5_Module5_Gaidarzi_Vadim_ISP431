<Page x:Class="RentShop.Pages.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogInPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox x:Name="PasswordTextBox"></PasswordBox>
            <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Войти"></Button>
        </StackPanel>
    </Grid>
</Page>
